<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="myApp">
    <div class="container body-content">
        <div class="row">
            <div class="col-md-2 menu-div-1">
                <ul class="menu">
                    <li><a href="#/">Games</a>
                        <ul>
                            <li><a href="#/addGame">Add Game</a></li>
                        </ul>
                    </li>
                    <li><a href="#/Developers">Developers</a>
                        <ul>
                            <li><a href="#/addDeveloper">Add Developer</a></li>
                        </ul>
                    </li>
                    <li><a href="#/Publishers">Publishers</a>
                        <ul>
                            <li><a href="#/addPublisher">Add Publisher</a></li>
                        </ul>
                    </li>
                </ul>
            </div>            
            <div class="col-md-7">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/applicationScripts")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
